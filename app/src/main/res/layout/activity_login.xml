            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bt_shape_blue_border_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_login_password" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:textColor="@color/home_text"
                    android:textColorHint="@color/black_light"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/forget_switch_linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_length_dp_8"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/forget_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_forgetthepassword_conceal"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/activity_length_dp_10"
                android:layout_marginLeft="@dimen/activity_length_dp_15"
                android:layout_marginRight="@dimen/activity_length_dp_15"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/find_nick_name"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center_vertical|start"
                    android:text="找回用户名"
                    android:textSize="@dimen/view_item_text_size1" />

                <TextView
                    android:id="@+id/forget_pad"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text="忘记密码?"
                    android:textColor="@color/blue_bg"
                    android:textSize="@dimen/view_item_text_size1" />

            </LinearLayout>

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/bt_shape_blue_corners_bg"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/activity_word_sp_22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/activity_length_dp_10"
                android:layout_marginLeft="@dimen/activity_length_dp_15"
                android:layout_marginRight="@dimen/activity_length_dp_15"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_member"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/view_item_text_size1" />

            </LinearLayout>

