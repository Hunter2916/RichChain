<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/header_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_length_dp_8"
        android:layout_marginRight="@dimen/activity_length_dp_8"
        android:background="@color/home_line"
        android:orientation="vertical"
        tools:context="com.maijia.rc.fragment.TeamFragment">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="8dp"
            app:indicator_drawable_selected="@drawable/bg_cricle_blue">

        </com.youth.banner.Banner>

        <include
            android:id="@+id/info"
            layout="@layout/view_fragment_home_inform" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:background="@color/home_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_lx_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:text="行业资讯"
                android:textColor="@color/blue_bg"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:src="@mipmap/ic_lx_bg" />

            <TextView
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:background="@color/home_text" />
        </LinearLayout>
    </LinearLayout>
</layout>
