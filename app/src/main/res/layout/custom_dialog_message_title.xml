<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rounded_corners"
    android:orientation="vertical">

    <!--通用对话框-->
    <TextView
        android:id="@+id/tv_custom_dialog_setting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_length_dp_10"
        android:layout_marginLeft="@dimen/activity_length_dp_30"
        android:layout_marginRight="@dimen/activity_length_dp_30"
        android:layout_marginTop="@dimen/activity_length_dp_20"
        android:gravity="center"
        android:text="确认关闭订单？"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_custom_dialog_setting_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="@dimen/activity_length_dp_30"
                android:layout_marginRight="@dimen/activity_length_dp_30"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="发现最新版本是否更新"
                android:textColor="@color/home_text"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/home_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/home_line" />

                <TextView
                    android:id="@+id/tv_custom_dialog_setting_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_rounded_corners_bottom"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="更新"
                    android:textColor="@color/baby_blue"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>

