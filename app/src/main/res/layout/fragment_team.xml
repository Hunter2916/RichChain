<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_line"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="com.maijia.rc.fragment.TeamFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_length_dp_12"
            android:layout_marginRight="@dimen/activity_length_dp_12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/bt_circle_white_gradient_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="A区"
                        android:textColor="@color/home_text"
                        android:textSize="@dimen/activity_word_sp_18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/a_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="人数：20"
                            android:textColor="@color/blue_bg"
                            android:textSize="@dimen/activity_word_sp_15" />

                        <TextView
                            android:id="@+id/a_hashrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="算力：10"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/activity_word_sp_15" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="0.005"
                    android:background="@color/home_line"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="B区"
                        android:textColor="@color/home_text"
                        android:textSize="@dimen/activity_word_sp_18" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/b_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="人数：20"
                            android:textColor="@color/blue_bg"
                            android:textSize="@dimen/activity_word_sp_15" />

                        <TextView
                            android:id="@+id/b_hashrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="算力：10"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/activity_word_sp_15" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="@dimen/activity_length_dp_12"
                android:background="@drawable/bt_circle_white_gradient_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_length_dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="8dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:background="@color/blue_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_length_dp_8"
                        android:text="团队列表"
                        android:textColor="@color/home_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="@dimen/activity_length_dp_15"
                        android:layout_weight="1"
                        android:background="@drawable/bt_shape_black_border_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="起始时间"
                        android:textColor="@color/black_light" />

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="@dimen/activity_length_dp_15"
                        android:layout_weight="1"
                        android:background="@drawable/bt_shape_black_border_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="结束时间"
                        android:textColor="@color/black_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/mobile_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="@dimen/activity_length_dp_15"
                        android:layout_weight="1"
                        android:background="@drawable/bt_shape_black_border_bg"

                        android:gravity="center_vertical"
                        android:hint="手机号码"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/activity_length_dp_5"
                        android:textColor="@color/home_text"
                        android:textColorHint="@color/black_light"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"

                        android:layout_marginRight="@dimen/activity_length_dp_15"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/area"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bt_shape_black_border_bg"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingLeft="3sp"
                                android:text="区域" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingRight="5dp"
                                android:src="@mipmap/ic_arrow" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/search_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:background="@drawable/bt_circle_blue_gradient_bg"
                            android:gravity="center"
                            android:text="查询" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/home_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/activity_length_dp_15"
                    android:layout_marginRight="@dimen/activity_length_dp_15"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center_horizontal"
                        android:text="昵称"
                        android:textColor="@color/home_text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="用户名"
                        android:textColor="@color/home_text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="0.8"
                        android:gravity="center_horizontal"
                        android:text="矿机算力"
                        android:textColor="@color/home_text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="区域"
                        android:textColor="@color/home_text" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:text="注册时间"
                        android:textColor="@color/home_text" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/home_line" />

                <include
                    android:id="@+id/hint"
                    layout="@layout/view_hint" />

                <com.maijia.rc.view.PullToRefreshView
                    android:id="@+id/pull_to_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.maijia.rc.view.InnerScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.maijia.rc.view.ListViewForScrollView
                                android:id="@+id/listView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:divider="@null"
                                android:dividerHeight="0dp" />
                        </LinearLayout>
                    </com.maijia.rc.view.InnerScrollView>
                </com.maijia.rc.view.PullToRefreshView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
