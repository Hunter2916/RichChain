<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_line"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="com.maijia.rc.fragment.HomePageFragment">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_length_dp_18"
                    android:background="@color/blue_bg" />

                <include
                    android:id="@+id/titlebar"
                    layout="@layout/layout_title_bar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_length_dp_8"
                    android:layout_marginRight="@dimen/activity_length_dp_8"
                    android:background="@drawable/bt_circle_white_gradient_bg"
                    android:orientation="vertical">


                    <!--<RelativeLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="@dimen/activity_length_dp_10"-->
                        <!--android:background="@drawable/bt_circle_white_gradient_bg"-->
                        <!--android:descendantFocusability="blocksDescendants"-->
                        <!--android:orientation="vertical">-->


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false">

                        </android.support.v7.widget.RecyclerView>
                    <!--</RelativeLayout>-->
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/activity_length_dp_10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/b1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_length_dp_55"
                    android:layout_marginTop="@dimen/activity_length_dp_12"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="5dp"
                    android:text="@string/meal_detail" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_length_dp_55"
                    android:layout_marginTop="@dimen/activity_length_dp_12"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="5dp"
                    android:text="@string/meal_detail" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_length_dp_55"
                    android:layout_marginTop="@dimen/activity_length_dp_12"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="5dp"
                    android:text="@string/meal_detail" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_length_dp_55"
                    android:layout_marginTop="@dimen/activity_length_dp_12"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="5dp"
                    android:text="@string/meal_detail" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_length_dp_55"
                    android:layout_marginTop="@dimen/activity_length_dp_12"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="5dp"
                    android:text="@string/meal_detail" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_length_dp_55"
                    android:layout_marginTop="@dimen/activity_length_dp_12"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="5dp"
                    android:text="@string/meal_detail" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_length_dp_55"
                    android:layout_marginTop="@dimen/activity_length_dp_12"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="5dp"
                    android:text="@string/meal_detail" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_length_dp_55"
                    android:layout_marginTop="@dimen/activity_length_dp_12"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="5dp"
                    android:text="@string/meal_detail" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</layout>
