<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_circle_white_gradient_bg">
        <!--通知 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_length_dp_14"
                android:background="@mipmap/ic_homepage_notice" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="@dimen/activity_length_dp_15"
                android:gravity="center"
                android:orientation="horizontal">

                <com.paradoxie.autoscrolltextview.VerticalTextview
                    android:id="@+id/tv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                </com.paradoxie.autoscrolltextview.VerticalTextview>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>